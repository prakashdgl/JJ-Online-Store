@model UserProfileOverviewVm
@{
    ViewData["Title"] = "Profile";
}

@section Styles{
    <link href="~/css/user-profile.css" rel="stylesheet" />
    <link href="~/css/logo-fix.css" rel="stylesheet" />
    <link href="~/css/quickview.css" rel="stylesheet" />
    <link href="~/css/product-details.css" rel="stylesheet" />
}

@section Scripts{
    <script src="~/js/slider.js"></script>
    <script src="~/lib/modernizr.js"></script>
    <script src="~/lib/velocity.min.js"></script>
    <script src="~/js/list-products-quickview.js"></script>
    <script src="~/js/slider.js"></script>
    <script src="~/js/Business/add.to.shopping.cart.js"></script>
}

<div class="container">
    <div class="row profile">
        <div class="col-md-3">
            <div class="profile-sidebar">
                <div class="profile-userpic">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/60/User.svg/1024px-User.svg.png" class="img-responsive" alt="User">
                </div>
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
                        @User.Identity.Name
                    </div>
                </div>
                <div class="profile-usermenu">
                    <ul class="nav">
                        <li class="active">
                            <a href="#">
                                <i class="glyphicon glyphicon-home"></i>
                                Overview
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="glyphicon glyphicon-user"></i>
                                Account Settings
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Billing" asp-action="Index">
                                <i class="glyphicon glyphicon-ok"></i>
                                Billing
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="glyphicon glyphicon-flag"></i>
                                Help
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="profile-content">
                <section id="recently-viewed">
                    <div class="similar-products-top">
                        <h2 class="col-xs-8 col-sm-8 col-md-8">Your Recently Viewed Items</h2>
                    </div>
                    <ul id="recent-items" class="col-md-12 col-sm-12 col-xs-12 cd-items cd-container">
                        @foreach (var product in Model.Products)
                        {
                            <li class="recent-item cd-item">

                                <article>
                                    <div class="img-container col-md-12">
                                        <div class="actions">
                                            <a href="#"><i class="fa fa-heart" aria-hidden="true"></i></a>
                                            <a href="#"><i class="fa fa-bars" aria-hidden="true"></i></a>
                                        </div>
                                        <img src="@product.Base64Image" alt="Product" />
                                        <div class="quickview">
                                            <a href="#0" class="cd-trigger">Quickview</a>
                                        </div>
                                    </div>
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="item-name">
                                        @product.Name
                                    </a>
                                    <p class="item-rating">
                                        <span class="yellow">&starf;&starf;&starf;&starf;</span>&star;<span class="item-reviews">12 Review(s)</span>
                                    </p>
                                    <p class="item-price">$@product.Price<a href="#"><i class="fa fa-cart-arrow-down" aria-hidden="true"></i></a></p>
                                </article>
                            </li>

                        }
                    </ul>
                </section>
            </div>
        </div>
    </div>
</div>
