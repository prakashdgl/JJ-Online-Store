@using Microsoft.AspNetCore.Identity
@using JjOnlineStore.Data.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <li>
            @{ var userName = UserManager.GetUserName(User); }
            <a asp-area="" asp-controller="Users" asp-action="Profile" class="fancybox" title="Manage">Hello, @userName!</a>
        </li>

        <li>            
            <a href="#" onclick="document.getElementById('logoutForm').submit()" class="fancybox">Logout</a>
        </li>
    </form>
}
else
{
    <li><a asp-area="" asp-controller="Account" asp-action="Register" class="fancybox">Register</a></li>
    <li><a asp-area="" asp-controller="Account" asp-action="Login" class="fancybox">Log in</a></li>
}