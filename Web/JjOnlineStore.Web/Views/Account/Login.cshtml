@model CredentialsModel
@{
    ViewData["Title"] = "Login";
}


@* ---------- Params for error ---------- *@
@await Html.PartialAsync("_ErrorParamsPartial")
@await Html.PartialAsync("_ErrorDialogPartial")




<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post" class="form-horizontal">
                <h4>Use a local account to log in.</h4>
                <hr />

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-default">Log in</button>
                </div>
            </form>
        </section>
    </div>
    
    <div class="col-md-4 col-lg-offset-1">
        <h4>Or Regiter from here: @Html.ActionLink("Regiter","Register","Account",null, new { @class = "btn btn-primary btn-lg" })</h4>
    </div>
</div>


@section Scripts {
    @{ await this.Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/error.js" asp-append-version="true"></script>
}
