@model CategoryViewModel

@{
    ViewBag.Title = "Create Category";
    Layout = "_Layout";
}


<h2>Create New Category</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="Name" asp-for="Name" class="col-md-2 control-label">Name:</label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" name="Name" id="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>

@* ---------- Params for error ---------- *@
@await Html.PartialAsync("_ErrorParamsPartial")
@await Html.PartialAsync("_ErrorDialogPartial")

@section Scripts {
    @{ await this.Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/error.js" asp-append-version="true"></script>
}
